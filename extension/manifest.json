{
  "manifest_version": 3,
  "name": "Productivity Tracker",
  "version": "1.0",
  "description": "Tracks time spent on websites and blocks distractions.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "http://localhost:5000/*"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
